<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mozu.example.RetailExample" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19"
        tools:ignore="GradleOverrides" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.launch.LaunchActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.signin.SignInActivity"
            android:theme="@android:style/Theme.NoTitleBar"/>
        <activity
            android:name=".ui.tenantselection.TenantSelectionActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".ui.main.MainActivity"/>
        <activity
            android:name=".ui.customer.CustomerActivity"
            android:label="@string/customer_title"/>
        <activity
            android:name=".ui.order.OrderActivity"
            android:label="@string/order_title"/>
        <activity
            android:name=".ui.orderitem.OrderItemActivity"
            android:label="@string/order_item_title"/>
    </application>

</manifest>
